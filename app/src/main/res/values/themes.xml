<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:buttonStyle">@style/SuppAppButton</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <style name="Text">
    <item name="android:textColor">@color/color_black</item>
    <item name="fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="TextNormBlack" parent="Text">
    <item name="android:textColor">@color/color_black</item>
    <item name="fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="TextNormWhite" parent="Text">
    <item name="android:textColor">@color/color_white</item>
    <item name="fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="SuppAppButton" parent="@android:style/Widget.Button">
    <item name="android:gravity">center</item>
    <item name="android:lines">1</item>
    <item name="android:textColor">@drawable/selector_button_color</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@drawable/selector_button_background</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>
</resources>